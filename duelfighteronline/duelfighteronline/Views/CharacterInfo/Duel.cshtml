@model duelfighteronline.Models.DuelViewModel

@{
    ViewBag.Title = "Duel";
}

<h2>Duel</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <script type="text/javascript">

        function OnChangeDuelRequest() {
            alert("Test");
